{
  "manifest_version": 3,
  "name": "Mental Health Check-In Assistant",
  "version": "1.0",
  "description": "A privacy-centric mental health check-in assistant.",
  "permissions": ["identity", "storage", "scripting"],
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.ts"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "sidebar_action": {
    "default_panel": "sidebar.html",
    "default_title": "Browsing Data Sidebar"
  },
  "oauth2": {
    "client_id": "1020926222372-8qfb9t4j3vtvopc19kaehupgmk5s6ijm.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/drive.file"]
  }
}